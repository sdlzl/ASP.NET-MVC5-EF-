@section FootScript{

    <link rel="stylesheet" href="~/css/swiper.min.css">
    <script src="~/js/swiper.jquery.min.js"></script>
    <script type="text/javascript">
        $(function () {
            

            //点击下拉获取标签的位置，设置div的位置 让他显示出来
            $("#btnCity").click(function () {
                var left=$(this).offset().left;
                var top=$(this).offset().top;
                var height=$(this).height();
                $("#popupCities").toggle("fast").css("top", top + height).css("left", left);
            });

            $("#popupCities li").click(function () {
                var CityId = $(this).attr("CityId");
                var CityName = $(this).text();
                $.ajax({
                    url: "/Main/SwitchCity",
                    data: { CityId: CityId },
                    dataType: "json",
                    type: "post",
                    success: function (res)
                    {
                        if(res.status=="ok")
                        {
                            //CityChose.innerText = CityName + "<i class=" + "iconfont icon-iconfontarrowdown-copy" + " ></i>";
                            //   $("#CityChose").textContent = CityName
                            $("#CityName").text(CityName);
                            $("#popupCities").css("display", "none");
                        }
                        else if(res.status=="error")
                        {
                            alert(res.errorMsg);
                        }
                    },
                    error: function ()
                    {
                        alert("服务器请求出错");
                    }


                });



            });


        });






    </script>

}